<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <EditText
            android:id="@+id/emailUserLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="@string/EmailSingUp"
            android:inputType="textEmailAddress"
            android:text="a@b.com"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
            android:id="@+id/passwordUserLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Heslo"
            android:inputType="textPassword"
            android:text="qqqqqq"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailUserLogin" />

    <Button
            android:id="@+id/LoginButton"
            android:layout_width="307dp"
            android:layout_height="47dp"
            android:layout_marginTop="24dp"
            android:onClick="LoginButtonClicked"
            android:text="@string/Login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordUserLogin" />

    <TextView
            android:text="@string/textLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nav_header_email" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="128dp"
            android:layout_marginStart="128dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="128dp" android:layout_marginRight="128dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/LoginButton" android:gravity="center"/>
    <Button
            android:text="@string/SignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/LoginCreateActivityButton"
            android:onClick="loginCreateUserButtonOnClicked" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nav_header_email" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginRight="64dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>