<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/backgroundTheme"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        android:id="@+id/scroll_map">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundTheme"
            android:backgroundTint="@color/backgroundTheme"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dip" >

            <com.esri.arcgisruntime.mapping.view.MapView
                    android:id="@+id/map1"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <View
                    android:id="@+id/customView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/transparent" />
        </RelativeLayout>



        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="@color/backgroundTheme"
                android:text="@string/MarkPlace"
                android:textAlignment="center"
                android:textColor="@color/GreenTheme"
                android:textSize="24sp" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundTheme"
                android:backgroundTint="@color/backgroundTheme">

            <FrameLayout
                    android:id="@+id/framelayoutBeforePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/backgroundTheme"
                    android:layout_margin="@dimen/activity_vertical_margin">

                <ImageView
                        android:id="@+id/imageView_before"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:contentDescription="TODO"
                        app:layout_constraintHorizontal_bias="0.907"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:srcCompat="@drawable/ic_image_place" />

                <TextView
                        android:id="@+id/textViewHintBeforePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/photo_hint"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="20dp" />

                <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/GreenTheme"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/photo_before"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="20dp" />
            </FrameLayout>

            <Switch
                    android:id="@+id/switchAddAfterPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/framelayoutBeforePhoto"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_centerInParent="true"
                    android:backgroundTint="@color/backgroundTheme"
                    android:text="@string/AddAfterPhoto"
                    android:textColor="@color/GreenTheme" />

            <FrameLayout
                    android:id="@+id/framelayoutAfterPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/switchAddAfterPhoto"
                    android:layout_margin="@dimen/activity_vertical_margin">

                <ImageView
                        android:id="@+id/imageView_after"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:contentDescription="TODO"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.907"
                        tools:srcCompat="@drawable/ic_image_place" />

                <TextView
                        android:id="@+id/textViewHintAfterPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/photo_hint"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="20dp" />

                <TextView
                        android:id="@+id/titleAfterPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@color/GreenTheme"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/photo_after"
                        android:textColor="@android:color/primary_text_light_nodisable"
                        android:textSize="20dp" />
            </FrameLayout>


        </RelativeLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:backgroundTint="@color/backgroundTheme"
                android:text="@string/Info"
                android:textColor="@color/GreenTheme"
                android:textAlignment="center"
                android:textSize="20dp" />

        <EditText
                android:id="@+id/placeInfo"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@drawable/custom_text_view"

                android:gravity="center_horizontal"
                android:layout_margin="@dimen/text_margin"
                android:textSize="20sp"
                android:hint="..."
                android:textColorHint="@drawable/selector"
                android:textColor="@color/cardview_light_background" />

        <Button
                android:id="@+id/button_clean"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_margin="@dimen/text_margin"
                android:backgroundTint="@color/GreenTheme"
                android:background="@drawable/custom_button"
                android:text="@string/button_clean" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>