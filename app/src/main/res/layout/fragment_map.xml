<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/text_gallery"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.esri.arcgisruntime.mapping.view.MapView
            android:id="@+id/map1"
            android:layout_width="412dp"
            android:layout_height="569dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_gallery" />

    <Button
            android:id="@+id/button_gps"
            android:layout_width="268dp"
            android:layout_height="47dp"
            android:layout_marginTop="12dp"
            android:text="@string/button_gps"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.448"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_after" />

    <Button
            android:id="@+id/button_clean"
            android:layout_width="118dp"
            android:layout_height="50dp"
            android:layout_marginStart="36dp"
            android:text="@string/button_clean"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_photo_before"
            app:layout_constraintTop_toBottomOf="@+id/button_gps"
            app:layout_constraintVertical_bias="0.696" />

    <Button
            android:id="@+id/button_photo_before"
            android:layout_width="113dp"
            android:layout_height="53dp"
            android:layout_marginStart="32dp"
            android:text="@string/photo_before"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_gps"
            app:layout_constraintVertical_bias="0.674" />

    <Button
            android:id="@+id/button_photo_after"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/photo_after"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.279"
            app:layout_constraintStart_toEndOf="@+id/button_clean"
            app:layout_constraintTop_toBottomOf="@+id/button_gps"
            app:layout_constraintVertical_bias="0.639" />

    <ImageView
            android:id="@+id/imageView_after"
            android:layout_width="85dp"
            android:layout_height="89dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.829"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/map1"
            tools:srcCompat="@tools:sample/avatars" />

    <ImageView
            android:id="@+id/imageView_before"
            android:layout_width="76dp"
            android:layout_height="83dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.108"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/map1"
            tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>