<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/eventScrollView"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
android:background="@color/backgroundTheme"
tools:context="com.holubek.trashhunter.ui.event.EventFragment">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.place.PlaceFragment"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="240dp" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/textColor"
                android:textSize="24dp"
                android:gravity="center"/>
        <TextView
                android:id="@+id/eventOrganizerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:textSize="20dp"
                android:text="Organizátor:"
                android:textColor="@color/GreenTheme"/>
        <TextView
                android:id="@+id/eventOrganizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/textColor"/>

        <TextView
                android:id="@+id/eventStartDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:textSize="20dp"
                android:text="Začiatok udalosti:"
                android:textColor="@color/GreenTheme"/>
        <TextView
                android:id="@+id/eventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/textColor"/>
        <TextView
                android:id="@+id/eventEndDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:textSize="20dp"
                android:text="Koniec udalosti:"
                android:textColor="@color/GreenTheme"/>
        <TextView
                android:id="@+id/eventEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/textColor"/>
        <TextView
                android:id="@+id/eventDetailsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_margin"
                android:layout_marginLeft="@dimen/text_margin"
                android:layout_marginRight="@dimen/text_margin"
                android:textSize="20dp"
                android:text="Informácie:"
                android:textColor="@color/GreenTheme"/>
        <TextView
                android:id="@+id/eventDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/textColor"/>
    </LinearLayout>
    <Button
            android:id="@+id/buttonParticiants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/participants"
            android:layout_margin="16dp"
            android:textColor="@color/backgroundTheme"
            android:background="@drawable/custom_button"
            android:backgroundTint="@color/GreenTheme"/>


    <androidx.cardview.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            cardCornerRadius="20dp"
            android:layout_margin="8dp"
            android:background="@color/colorPrimary">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/GreenTheme">

            <TextView
                    android:id="@+id/eventLocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/eventMap"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/backgroundTheme"/>

            <TextView
                    android:id="@+id/eventCoordination"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/eventLocation"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/backgroundTheme"/>

            <com.esri.arcgisruntime.mapping.view.MapView
                    android:id="@+id/eventMap"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintHorizontal_bias="0.6" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/RateEvent"
            android:textSize="20dp"
            android:textColor="@color/GreenTheme"/>
    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/eventTextRating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/Comment"
            android:backgroundTint="@color/GreenTheme"
            android:textColorHint="@color/hint_text"
            android:textColor="@color/textColor"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/eventRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:numStars="5"
                android:progressTint="@color/GreenTheme"
                android:stepSize="0.5" />
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

        </View>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEventRate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/custom_button"
                android:backgroundTint="@color/GreenTheme"
                android:text="Pridať komentár" />
    </LinearLayout>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/Comments"
            android:textSize="20dp"
            android:layout_margin="@dimen/text_margin"
            android:textColor="@color/GreenTheme"/>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerComments"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:clipToPadding="false"
            android:foregroundGravity="center"
            android:overScrollMode="never"
            android:background="@drawable/custom_text_view"
            android:backgroundTint="@color/GreenTheme"
            android:layout_margin="16dp"
            />
</LinearLayout>


</androidx.core.widget.NestedScrollView>



