<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10pt"
        android:background="@drawable/custom_text_view">

    <ImageView
            android:id="@+id/imageTicketEvent"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:textAlignment="center"
            android:background="@drawable/custom_image"
            android:textSize="24sp" />
    <TextView
            android:id="@+id/textViewEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="@color/textColor"
            android:textSize="24dp"
            android:gravity="center"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Organizátor:"
            android:textColor="@color/GreenTheme"
            android:textSize="18dp"/>
    <TextView
            android:id="@+id/textViewEventOrganizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_marginBottom="16sp"
            android:textColor="@color/textColor"
            android:textSize="18dp"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Začiatok udalosti:"
            android:textColor="@color/GreenTheme"
            android:textSize="18dp"/>
    <TextView
            android:id="@+id/textViewEventStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_marginBottom="16sp"
            android:textColor="@color/textColor"
            android:textSize="18dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="Miesto konania:"
            android:textColor="@color/GreenTheme"
            android:textSize="18dp"/>

    <TextView
            android:id="@+id/textViewEventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textSize="18dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/joinEvent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:textColor="@color/textColor"
                android:textSize="18dp" />

        <Button
                android:id="@+id/buttonAddEventInterest"
                android:layout_width="66dp"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_add_button" />
        <Button
                android:id="@+id/buttonDeleteEventInterest"
                android:layout_width="66dp"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_delete_black_24dp" />

    </LinearLayout>
    <Button
            android:id="@+id/button_delete_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/delete_event"
            android:background="@color/GreenTheme"
            />


</LinearLayout>