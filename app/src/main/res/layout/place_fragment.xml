<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/backgroundTheme">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.place.PlaceFragment"
            android:orientation="vertical">
        <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                android:overScrollMode="never" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/placeCleared"
                        android:layout_width="482dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:textColor="@color/textColor"/>
                <Button
                        android:id="@+id/button_takeAftPicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:text="@string/placeCleared"
                        android:background="@drawable/custom_button"
                        android:backgroundTint="@color/GreenTheme"
                        />
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:textSize="20dp"
                    android:text="Príspevok vytvoril:"
                    android:textColor="@color/textColor"/>
            <TextView
                    android:id="@+id/placeUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textSize="16dp"
                    android:textColor="@color/textColor"/>
            <TextView
                    android:id="@+id/clearUserNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:textSize="20dp"
                    android:text="Miesto vyčistil:"
                    android:textColor="@color/textColor"/>
            <TextView
                    android:id="@+id/clearUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textSize="16dp"
                    android:textColor="@color/textColor"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:textSize="20dp"
                    android:text="Dátum zverejnenia:"
                    android:textColor="@color/textColor"/>
            <TextView
                    android:id="@+id/placeDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin = "@dimen/text_margin"
                    android:textSize="16dp"
                    android:textColor="@color/textColor"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginRight="@dimen/text_margin"
                    android:textSize="20dp"
                    android:text="Informácie:"
                    android:textColor="@color/textColor"/>
            <TextView
                    android:id="@+id/placeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textSize="16dp"
                    android:textColor="@color/textColor"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/ratingPlace"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:focusable="false"
                        android:numStars="5"
                        android:stepSize="0.5"
                        />

                <TextView
                        android:id="@+id/countRatingText"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/text_margin"
                        android:layout_weight="1"
                        android:textColor="@color/textColor"
                        android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>


        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                cardCornerRadius="20dp"
                android:layout_margin="8dp"
                android:background="@color/colorPrimary">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <com.esri.arcgisruntime.mapping.view.MapView
                        android:id="@+id/placeMap"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        app:layout_constraintBottom_toTopOf="@+id/placeInfo"
                        app:layout_constraintHorizontal_bias="0.6" />

                <TextView
                        android:id="@+id/placeLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeMap"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp" />

                <TextView
                        android:id="@+id/placeCoordination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeLocation"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/RatePlace"
                android:textSize="20dp"
                android:textColor="@color/textColor"/>
        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/eventTextRating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/Comment"
                android:backgroundTint="@color/GreenTheme"
                android:textColor="@color/textColor"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/placeRatingBar"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:numStars="5"
                    android:stepSize="0.5"
                    />
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonPlaceRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_comment"
                    android:background="@color/GreenTheme"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Comments"
                android:textSize="20dp"
                android:layout_margin="@dimen/text_margin"
                android:textColor="@color/textColor"/>

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerComments"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                android:overScrollMode="never"
                android:background="@color/backgroundTheme"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>


