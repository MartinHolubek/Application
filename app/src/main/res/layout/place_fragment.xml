<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.place.PlaceFragment"
            android:orientation="vertical">
        <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="wrap_content"
                android:layout_height="291dp"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                android:overScrollMode="never" />
        <TextView
            android:id="@+id/placeUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"/>
        <TextView
                android:id="@+id/placeDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"/>
        <TextView
                android:id="@+id/placeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"/>

        <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                cardCornerRadius="20dp"
                android:layout_margin="8dp"
                android:background="@color/colorPrimary">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <com.esri.arcgisruntime.mapping.view.MapView
                        android:id="@+id/placeMap"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        app:layout_constraintBottom_toTopOf="@+id/text_gallery"
                        app:layout_constraintHorizontal_bias="0.6" />

                <TextView
                        android:id="@+id/placeLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeMap"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp" />

                <TextView
                        android:id="@+id/placeCoordination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/placeLocation"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="@string/RatePlace"
                android:textSize="20dp"/>
        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/placeTextRating"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/Comment"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/placeRatingBar"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    android:numStars="5"
                    android:stepSize="0.5"
                    />
            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonPlaceRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Comments"
                android:textSize="20dp"
                android:layout_margin="@dimen/text_margin"/>

        <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPagerComments"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                android:overScrollMode="never"
                android:background="@color/colorPrimary"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>


